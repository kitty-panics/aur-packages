# Maintainer: Kitty Panics

    #> Package name
#pkgbase=
pkgname=vimix-cursors-git
    #> Version
pkgver=r16.9bc292f409
pkgrel=1
#epoch=1
    #> Generic
pkgdesc="Vimix-cursors for linux desktop"
arch=('x86_64')
url="https://github.com/vinceliuice/Vimix-cursors"
license=('GPL3')
    #> Dependencies
#depends=('')
makedepends=('git')
#optdepends=('')
    #> Package relations
provides=("${pkgname}" "${pkgname%-*}")
conflicts=("${pkgname}" "${pkgname%-*}")
    #> Others
#backup=('etc/xyz/xyz.conf')
#options=('')
#install=xyz.install
    #> Sources
#source=("git+$url.git")
#noextract=("")
    #> Integrity
#sha256sums=('SKIP')

pkgver() {
    _repo_url="https://api.github.com/repos/$(echo $url | cut -d'/' -f4,5)"
    _commit_count=$(curl -sLI "${_repo_url}/commits?per_page=1" | grep '^link' | cut -d'=' -f6 | cut -d'>' -f1)
    _last_commit=$(curl -sL "${_repo_url}/git/refs/heads/master" | grep 'sha' | cut -d'"' -f4 | cut -c 1-10)
    printf "r%s.%s" "${_commit_count}" "${_last_commit}"
}

prepare() {
    if [[ ! -d "${srcdir}"/"${pkgname}" ]]; then
        git clone --depth=1 "${url}" "${srcdir}"/"${pkgname}"
    fi
}

package() {
    # mkdir
    install -dm755 "${pkgdir}"/usr/share/icons/{"${pkgname%-*}","${pkgname%-*}"-white}
    install -dm755 "${pkgdir}"/usr/share/licenses/"${pkgname}"

    # pkg files
    cp -a "${srcdir}"/"${pkgname}"/dist/* \
          "${pkgdir}"/usr/share/icons/"${pkgname%-*}"/
    cp -a "${srcdir}"/"${pkgname}"/dist-white/* \
          "${pkgdir}"/usr/share/icons/"${pkgname%-*}"-white/

    # licenses
    install -Dm644 "${srcdir}"/"${pkgname}"/LICENSE \
                   "${pkgdir}"/usr/share/licenses/"${pkgname}"/
}
