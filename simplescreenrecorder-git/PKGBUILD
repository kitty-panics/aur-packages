# Maintainer: Kitty Panics

    #> Package name
#pkgbase=
pkgname=simplescreenrecorder-git
    #> Version
pkgver=r909.c092f3ee35
pkgrel=1
#epoch=1
    #> Generic
pkgdesc="SimpleScreenRecorder, a screen recorder for Linux."
arch=('x86_64')
url="https://github.com/MaartenBaert/ssr"
license=('GPL3')
    #> Dependencies
depends=('pipewire-jack')
#optdepends=('')
makedepends=('git'
             'cmake')
    #> Package relations
provides=("${pkgname}" "${pkgname%-*}")
conflicts=("${pkgname}" "${pkgname%-*}")
    #> Others
#backup=('etc/xyz/xyz.conf')
#options=('')
#install=xyz.install
    #> Sources
#source=("git+${url}.git")
#noextract=("")
    #> Integrity
#sha256sums=('SKIP')

pkgver() {
    print-github-repo-version "${url}"
}

prepare() {
    if [[ ! -d "${srcdir}"/"${pkgname}" ]]; then
        git clone --depth=1 "${url}" "${srcdir}"/"${pkgname}"
    fi
}

build() {
    cd "${srcdir}"/"${pkgname}"
    mkdir build && cd build
    cmake -DCMAKE_INSTALL_PREFIX=/usr \
          -DCMAKE_BUILD_TYPE=Release \
          -DWITH_QT5=TRUE ..
    make
}

package() {
    # mkdir
    install -dm755 "${pkgdir}"/usr/bin
    install -dm755 "${pkgdir}"/usr/lib
    install -dm755 "${pkgdir}"/usr/share/applications
    install -dm755 "${pkgdir}"/usr/share/icons
    install -dm755 "${pkgdir}"/usr/share/man
    install -dm755 "${pkgdir}"/usr/share/metainfo
    install -dm755 "${pkgdir}"/usr/share/"${pkgname%-*}"

    # pkg files, lib, bin, .desktop, icons, man, metainfo
    cd "${srcdir}"/"${pkgname}"/build
    make DESTDIR="${pkgdir}"/ install
}
