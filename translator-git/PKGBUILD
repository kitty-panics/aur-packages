# Maintainer: Kitty Panics

    #> Package name
#pkgbase=
pkgname=translator-git
    #> Version
pkgver=r26.d079730096
pkgrel=1
#epoch=1
    #> Generic
pkgdesc="Command-line aggregation translation tool, support Google, Bing, Youdao, Baidu, Ciba, 360."
url="https://github.com/skywind3000/translator"
arch=('x86_64')
license=('unknown')
    #> Dependencies
depends=('python')
#makedepends=('')
#optdepends=('')
    #> Package relations
provides=("${pkgname}" "${pkgname%-*}")
conflicts=("${pkgname}" "${pkgname%-*}")
    #> Others
#backup=('etc/xyz/xyz.conf')
#options=('')
#install=xyz.install
    #> Sources
source=("${url}/raw/master/translator.py"
        "${url}/raw/master/README.md")
#noextract=("")
    #> Integrity
sha256sums=('SKIP'
            'SKIP')

pkgver() {
    _repo_url="https://api.github.com/repos/$(echo $url | cut -d'/' -f4,5)"
    _commit_count=$(curl -sLI "${_repo_url}/commits?per_page=1" | grep '^link' | cut -d'=' -f6 | cut -d'>' -f1)
    _last_commit=$(curl -sL "${_repo_url}/git/refs/heads/master" | grep 'sha' | cut -d'"' -f4 | cut -c 1-10)
    printf "r%s.%s" "${_commit_count}" "${_last_commit}"
}

package() {
    # mkdir
    install -dm755 "${pkgdir}"/usr/bin
    install -dm755 "${pkgdir}"/usr/share/doc/"${pkgname}"

    # pkg files, bin
    install -Dm755 "${srcdir}"/translator.py \
                   "${pkgdir}"/usr/bin/"${pkgname%-*}"

    # doc
    install -Dm644 "${srcdir}"/README.md \
                   "${pkgdir}"/usr/share/doc/"${pkgname}"/
}
