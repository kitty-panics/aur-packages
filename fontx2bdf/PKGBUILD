# Maintainer: Kitty Panics

    #> Package name
#pkgbase=
pkgname=fontx2bdf
    #> Version
pkgver=1.1
pkgrel=1
#epoch=1
    #> Generic
pkgdesc="Convert fontx to bdf."
arch=('x86_64')
url="https://unifoundry.com/pub/japanese" # https://unifoundry.com/japanese/index.html
license=('GPL2' 'GFDL1.3')
    #> Dependencies
#depends=('')
#makedepends=('')
#optdepends=('')
    #> Package relations
provides=("${pkgname}")
conflicts=("${pkgname}")
    #> Others
#backup=('etc/xyz/xyz.conf')
#options=('')
#install=xyz.install
    #> Sources
source=("${url}/${pkgname}-${pkgver}.tar.gz")
#noextract=("")
    #> Integrity
sha256sums=('SKIP')

build() {
    cd "${srcdir}"/"${pkgname}"-"${pkgver}"
    make distclean
    make
    groff -man -Tutf8 "${pkgname}".1 | gzip -9 > "${pkgname}".1.gz
}

package() {
    # mkdir
    install -dm755 "${pkgdir}"/usr/bin
    install -dm755 "${pkgdir}"/usr/share/doc/"${pkgname}"
    install -dm755 "${pkgdir}"/usr/share/licenses/"${pkgname}"
    install -dm755 "${pkgdir}"/usr/share/man/man1

    # pkg files
    cd "${srcdir}"/"${pkgname}"-"${pkgver}"
    install -Dm755 fontx2bdf \
                   "${pkgdir}"/usr/bin/

    # doc
    install -Dm644 ChangeLog \
                   "${pkgdir}"/usr/share/doc/"${pkgname}"/
    # licenses
    install -Dm644 COPYING \
                   "${pkgdir}"/usr/share/licenses/"${pkgname}"/
    # man
    install -Dm644 "${pkgname}".1.gz \
                   "${pkgdir}"/usr/share/man/man1/"${pkgname}".1.gz
}
