# Maintainer: Kitty Panics

pkgname=qmk-udev-git
pkgver=r26504.dcc47ea31b
pkgrel=1
url="https://github.com/qmk/qmk_firmware"
pkgdesc="Open-source keyboard firmware for Atmel AVR and Arm USB families - udev rules."
arch=('x86_64')
license=('GPL2')
provides=("${pkgname}" "${pkgname%-*}")
conflicts=("${pkgname}" "${pkgname%-*}")
depends=('qmk')
source=("${url}/raw/master/util/udev/50-qmk.rules")
sha256sums=('SKIP')

pkgver() {
    _repo_url="https://api.github.com/repos/$(echo $url | cut -d'/' -f4,5)"
    _commit_count=$(curl -sLI "${_repo_url}/commits?per_page=1" | grep '^link' | cut -d'=' -f6 | cut -d'>' -f1)
    _last_commit=$(curl -sL "${_repo_url}/git/refs/heads/master" | grep 'sha' | cut -d'"' -f4 | cut -c 1-10)
    printf "r%s.%s" "${_commit_count}" "${_last_commit}"
}

package() {
    # mkdir
    install -dm755 "${pkgdir}"/etc/udev/rules.d

    # pkg files
    install -Dm644 "${srcdir}"/50-qmk.rules \
                   "${pkgdir}"/etc/udev/rules.d/50-qmk.rules
}
