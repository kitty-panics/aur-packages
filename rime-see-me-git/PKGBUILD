# Maintainer: Kitty Panics

    #> Package name
#pkgbase=
pkgname=rime-see-me-git
    #> Version
pkgver=r23.7112285032
pkgrel=1
#epoch=1
    #> Generic
pkgdesc="Skin editor for Weasel (Rime frontend on Windows)."
arch=('any')
url="https://github.com/fxliang/RimeSeeMe"
license=('unknown')
    #> Dependencies
#depends=('')
makedepends=('git')
#optdepends=('')
    #> Package relations
provides=("${pkgname}" "${pkgname%-*}")
conflicts=("${pkgname}" "${pkgname%-*}" "${pkgname%-*}"-old)
    #> Others
#backup=('etc/xyz/xyz.conf')
#options=('')
#install=xyz.install
    #> Sources
#source=("git+${url}.git")
#noextract=("")
    #> Integrity
#sha256sums=('SKIP')

pkgver() {
    print-github-repo-version "${url}"
}

prepare() {
    if [[ ! -d "${srcdir}"/"${pkgname}" ]]; then
        git clone --depth=1 "${url}" "${srcdir}"/"${pkgname}"
    fi
}

package() {
    # mkdir
    install -dm755 "${pkgdir}"/opt/"${pkgname%-*}"
    install -dm755 "${pkgdir}"/usr/share/doc/"${pkgname}"

    # pkg files
    cp -a "${srcdir}"/"${pkgname}"/* \
          "${pkgdir}"/opt/"${pkgname%-*}"/

    # doc
    mv "${pkgdir}"/opt/"${pkgname%-*}"/"READ ME.txt" \
       "${pkgdir}"/usr/share/doc/"${pkgname}"/README.txt
}
