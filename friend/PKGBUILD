# Maintainer: Kitty Panics

pkgbase=friend
pkgname=(boy"${pkgbase}" girl"${pkgbase}")
pkgver=2024.02.14
pkgrel=1
url="https://b23.tv/ZEtwjPn"
pkgdesc="Soft kitty, warm kitty, little ball of fur."
arch=('x86_64')
license=('unknown')
source=("${pkgbase}")
sha256sums=('SKIP')

package_boyfriend() {
    provides=("${pkgname}")
    conflicts=("${pkgname}")

    # mkdir
    install -dm755 "${pkgdir}"/usr/bin

    # pkg files / bin
    install -Dm755 "${srcdir}"/"${pkgbase}" \
                   "${pkgdir}"/usr/bin/"${pkgname}"
    sed -i "s/${pkgbase}/${pkgname}/" \
           "${pkgdir}"/usr/bin/"${pkgname}"
}

package_girlfriend() {
    provides=("${pkgname}")
    conflicts=("${pkgname}")

    # mkdir
    install -dm755 "${pkgdir}"/usr/bin

    # pkg files / bin
    install -Dm755 "${srcdir}"/"${pkgbase}" \
                   "${pkgdir}"/usr/bin/"${pkgname}"
    sed -i "s/${pkgbase}/${pkgname}/" \
           "${pkgdir}"/usr/bin/"${pkgname}"
}
