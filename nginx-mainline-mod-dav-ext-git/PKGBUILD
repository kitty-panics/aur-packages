# Maintainer: Kitty Panics

    #> Package name
#pkgbase=
pkgname=nginx-mainline-mod-dav-ext-git
    #> Version
pkgver=r122.f5e30888a2
pkgrel=6
#epoch=1
    #> Generic
pkgdesc="nginx WebDAV PROPFIND,OPTIONS,LOCK,UNLOCK support (mainline)."
arch=('x86_64')
url="https://github.com/arut/nginx-dav-ext-module"
license=('BSD2')
    #> Dependencies
depends=('nginx-mainline=1.25.3' 'libxml2' 'libxslt')
makedepends=('git' 'nginx-mainline-src=1.25.3')
#optdepends=('')
    #> Package relations
provides=("${pkgname}" "${pkgname%-*}")
conflicts=("${pkgname}" "${pkgname%-*}")
    #> Others
#backup=('etc/xyz/xyz.conf')
#options=('')
#install=xyz.install
    #> Sources
_modname="nginx-dav-ext-module"
#source=("${_modname}::git+${url}")
#noextract=("")
    #> Integrity
#sha256sums=('SKIP')

pkgver() {
    print-github-repo-version "${url}"
}

prepare() {
    if [[ ! -d "${srcdir}"/"${pkgname}" ]]; then
        git clone --depth=1 "${url}" "${srcdir}"/"${_modname}"
    fi
}

build() {
    mkdir -p build
    cd build
    ln -sf /usr/src/nginx/auto .
    ln -sf /usr/src/nginx/src  .
    /usr/src/nginx/configure --with-compat --add-dynamic-module=../${_modname}
    make modules
}

package() {
    # mkdir
    install -dm755 "${pkgdir}"/usr/lib/nginx/modules
    install -dm755 "${pkgdir}"/usr/share/licenses/"${pkgname}"

    # pkg files
    cd "${srcdir}"/build/objs
    for i in ngx_*.so; do
        install -Dm644 ${i} \
                       "${pkgdir}"/usr/lib/nginx/modules/${i}
    done

    # licenses
    install -Dm644 "${srcdir}"/${_modname}/LICENSE \
                   "${pkgdir}"/usr/share/licenses/${pkgname}/LICENSE
}
